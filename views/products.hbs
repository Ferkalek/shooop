<h1>Products page</h1>

{{#if products.length}}
{{#each products}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <span class="card-title">{{title}}</span>
      </div>
      <div class="card-content">
        <p>{{description}}</p>
        <h5>Price: <span class="price">{{price}}</span></h5>
      </div>
      <div class="card-action actions-toolbar">
          <a href="/products/{{id}}">More</a>
          {{#if @root.isAuth}}

            {{#ifeq userId._id @root.userId}}
              <a href="/products/{{id}}/edit?allow=true">Edit</a>
            {{/ifeq}}
          
          <form action="/card/add" method="POST">
            <input type="hidden" name="id" value="{{id}}">
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <button type="submit" class="btn btn-primary">Add to card</button>
          </form>
          {{/if}}
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>Don't have any products</p>
{{/if}}